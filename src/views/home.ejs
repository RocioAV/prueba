<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.0.1/tailwind.min.css" />
<%-include ('./partials/head.ejs') %>

  <link rel="stylesheet" href="/css/cards.css" />

  <body>
    <%- include('./partials/header.ejs') %>

      <main>
        <section class="sec-main">
          <div class="contenedor-boton">
            <button class="boton-de-inputs">
              <input class="campo" type="text" name="destino" placeholder="¿A dónde vas?" />
              <input class="campo" type="date" name="fecha-entrada" placeholder="Fecha de entrada" />
              <input class="campo" type="date" name="fecha-salida" placeholder="Fecha de salida" />
              <input class="campo" type="number" name="viajeros" placeholder="Viajeros" />
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        </section>
      </main>

      <section class="sec-carr">
        <!-- <h2>¡Elige los mejores lugares para hospedarte!</h2> -->
        <div class="carruseluwu">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
              <% for (let i=7; i < 11 ; i++) { %>
                <div class="carousel-item <%= i === 7 ? 'active' : '' %>">
                  <img src="/images/products/<%= hospedajes[i].image[0] %>" class="d-block w-100" alt="Slide <%= i + 1 %>">
                  <div class="descrip">
                    <h6>
                      <%= hospedajes[i].name %>
                    </h6>
                    <p>
                      <%= hospedajes[i].description %>
                    </p>
                  </div>
                </div>
              <% } %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
        </div>
      </section>

      <main id="tercer-main">
        <div class="hospedajes">
          <% var contador=0; %>
            <% hospedajes.forEach((hospedaje)=> { %> <% if( contador < 8 ) { %>
                <article class="articuloCaja">
                  <div class="max-w-sm w-full py-6 px-3">
                    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                      <div class="bg-cover bg-center h-56 p-4" style="background-image: url(/images/products/<%= hospedaje.image[0] %>)" ></div>
                      <div class="flex justify-end">
                        <svg class="h-6 w-6 text-white fill-current" xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24">
                          <path
                            d="M12.76 3.76a6 6 0 0 1 8.48 8.48l-8.53 8.54a1 1 0 0 1-1.42 0l-8.53-8.54a6 6 0 0 1 8.48-8.48l.76.75.76-.75zm7.07 7.07a4 4 0 1 0-5.66-5.66l-1.46 1.47a1 1 0 0 1-1.42 0L9.83 5.17a4 4 0 1 0-5.66 5.66L12 18.66l7.83-7.83z">
                          </path>
                        </svg>
                      </div>
                    </div>
                    <div class="p-4">
                      <p class="uppercase tracking-wide text-sm font-bold text-gray-700">
                        <%= hospedaje.name %>
                      </p>
                      <p class="text-3xl text-gray-900">$ <%= hospedaje.price%>
                      </p>
                      <p class="text-gray-700">
                        <%= hospedaje.prov%>, <%= hospedaje.localidad%>
                      </p>
                      <div class="flex-1 inline-flex items-center">
                        <svg class="h-6 w-6 text-gray-600 fill-current mr-3" xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24">
                          <path
                            d="M0 16L3 5V1a1 1 0 0 1 1-1h16a1 1 0 0 1 1 1v4l3 11v5a1 1 0 0 1-1 1v2h-1v-2H2v2H1v-2a1 1 0 0 1-1-1v-5zM19 5h1V1H4v4h1V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v1h2V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v1zm0 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1V6h-2v2a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V6H3.76L1.04 16h21.92L20.24 6H19zM1 17v4h22v-4H1zM6 4v4h4V4H6zm8 0v4h4V4h-4z">
                          </path>
                        </svg>
                        <p>
                          <span class="text-gray-900 font-bold">
                            <%= hospedaje.personas%>
                          </span>
                          Personas
                        </p>
                      </div>
                    </div>
                    <div class="flex border-t border-gray-300 text-gray-700 oculto">
                      <% for (var i=0; i < hospedaje.include.length && i < 5; i++) { %>
                        <p>
                          <span class="text-gray-900 font-bold"></span>
                          <%= hospedaje.include[i] %>
                        </p>
                        <% } %>
                    </div>
                    <div class="px-4 pt-3 pb-4 border-t border-gray-300 bg-gray-100 oculto">
                      <div class="text-xs uppercase font-bold text-gray-600 tracking-wide">
                        Anfitrion
                      </div>
                      <div class="flex items-center pt-2 oculto">
                        <div class="bg-cover bg-center w-10 h-10 rounded-full mr-3" style="background-image: url(/images/users/default.webp);">
                        </div>
                        <div class="oculto">
                          <p class="font-bold text-gray-900">
                            <%= hospedaje.anfitrion%>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </article>

                <% contador++; %>
                  <% } %>
                    <% }) %>
        </div>
      </main>


      <%- include('./partials/footer.ejs')%>
  </body>

</html>